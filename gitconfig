[alias]
	s = status
	co = checkout
	ca = commit --amend
	can = commit --amend --no-edit
	mff = merge --ff-only
	ri = rebase --interactive
	rc = rebase --continue
	dc = diff --cached

[merge]
	conflictstyle = diff3

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	excludesfile = /Users/sanjoy/.gitignore

[url "git@github.com:sanjoy/"]
	insteadOf = gh:sanjoy/

[url "git://github.com/"]
	insteadOf = gh:
[init]
	defaultBranch = main
